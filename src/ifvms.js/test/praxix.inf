		print "3+-4="; check(val, -1); print ", ";
		@add (-4) 5 val;
		print "-4+5="; check(val, 1); print ", ";
		@add $7FFF $7FFE val;
		print "$7FFF+$7FFE="; check(val, -3); print ", ";
		@add $8000 $8000 val;
		print "$8000+$8000="; check(val, 0); print "^";
		testglobal = 6; testglobal2 = 8;
		@add testglobal testglobal2 val;
