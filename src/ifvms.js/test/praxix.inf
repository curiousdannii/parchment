		testglobal = $7FFE; testglobal2 = $7FFD;
		@add testglobal testglobal2 val;
		print "$7FFE+$7FFD="; check(val, -5); print "^";
		
		@sub 2 2 val;
		print "2-2="; check(val, 0); print ", ";
		@sub (-2) 3 val;
		print "-2-3="; check(val, -5); print ", ";
